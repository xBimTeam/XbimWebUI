    "version": "0.2.0",
    "configurations": [


        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\utilities\\copy-package-json.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Clean Util",
            "program": "${workspaceFolder}\\utilities\\clean.js",
            "args": ["."],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}